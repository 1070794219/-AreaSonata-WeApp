/* pages/chat/private-chat/index.wxss */
page{
    background-color:#ececec;
    padding-bottom: 100rpx;
}
scroll-view{
    height:1150rpx;
    padding-bottom:100rpx;
}
.reply .pic,
.send .pic{
    padding:20rpx;
}
.reply,
.send{
    display: flex;
}
.reply .pic image,
.send .pic image{
    width:80rpx;
    height:80rpx;
}
.send{ justify-content:flex-end; }
.reply .content{
    padding:20rpx 20rpx 20rpx 0;
    max-width:480rpx;
}
.send .content{
    padding:20rpx 0 20rpx 20rpx;
    max-width:480rpx;
}
.reply .content .text,
.send .content .text{ 
    background-color: #fff;
    border-radius: 10rpx;
    padding:20rpx;
    font-size:32rpx;
}
.send .content .text{
    background-color: #46489d;
    color: white;
}
.sendMessage{
    display: flex;
    position: fixed;
    bottom:0;
    left:0;
    right: 0;
    padding:20rpx;
    background-color: #ececec;
}
.inputMsg{
    flex: 2;
    background-color:#fff;
    height: 40rpx !important;
    font-size: 32rpx;
    padding:10rpx 20rpx;
}
.sendMessage .send{
    background-color:#46489d;
    color:#fff;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
    align-self: flex-end;
}